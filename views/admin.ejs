<div class="container mb-5 col-md-8" style="background-color: #dee2e6;">
    <div class="row mt-5">
        <div class="col">
            <h1 class="text-center text-decoration-underline">Nueva Publicación</h1>
        </div>
    </div>
    <div class="row mt-3 col-md-5 mx-auto">

        <form action="" id="nueva-publicacion">

            <div class="mb-3">
                <input type="text" class="form-control" id="titulo" placeholder="Ingrese el Título de la Publicación">
            </div>
            <div class="form-floating mb-3">
                <textarea class="form-control" placeholder="Ingrese algún comentario al respecto de la Publicación" id="detalle"
                    style="height: 100px"></textarea>
                <label for="detalle">Detalle</label>
            </div>
            <div class="mb-3">
                <input type="text" class="form-control" id="url_imagen" placeholder="Ingrese la URL de la imagen a Publicar">
            </div>
            <div class="mb-3">
                <input type="date" class="form-control"  name="Fecha" id="fecha">
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary btn-sm mb-3">
                    Publicar
                </button>
            </div>


        </form>


    </div>
</div>
